<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">?myMainColor</item>
        <item name="colorPrimary">?myMainColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">?myMainColor</item>
        <item name="colorOnPrimaryContainer">?myMainColor</item>
        <item name="colorPrimaryInverse">?myMainColor</item>
        <item name="colorSecondary">?mySecondColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">?mySecondColor</item>
        <item name="colorOnSecondaryContainer">?mySecondColor</item>
        <item name="colorTertiary">?mySecondColor</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">?myMainColor</item>
        <item name="colorOnTertiaryContainer">?myMainColor</item>
        <item name="android:statusBarColor">?mySecondColor</item>
    </style>

    <style name="MyThemeMars" parent="MyBaseTheme">
        <item name="myMainColor">@color/red</item>
        <item name="mySecondColor">@color/light_red</item>
    </style>

    <style name="MyThemeSky" parent="MyBaseTheme">
        <item name="myMainColor">@color/blue</item>
        <item name="mySecondColor">@color/light_blue</item>
    </style>

    <style name="MyThemeEarth" parent="MyBaseTheme">
        <item name="myMainColor">@color/green</item>
        <item name="mySecondColor">@color/light_green</item>
    </style>

    <style name="myChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/astro</item>
        <item name="chipStrokeColor">@color/light_gray</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="cornerSize">4dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="spanText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textColor">#FF6D00</item>
    </style>

    <style name="MyThemeSplash" parent="MyBaseTheme">
        <item name="myMainColor">@color/purple_500</item>
        <item name="mySecondColor">@color/purple_200</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>